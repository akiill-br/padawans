{
  "Routes": [
    {
      "UpstreamPathTemplate": "/api/Resource",
      "UpstreamHttpMethod": [ "Get", "Post", "Put" ],

      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "api.resource",
          "Port": 80
        }
      ],
      "DownstreamPathTemplate": "/api/Resource"
    },
    {
      "UpstreamPathTemplate": "/api/Resource/{id}",
      "UpstreamHttpMethod": [ "Get", "Delete" ],
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "api.resource",
          "Port": 80
        }
      ],
      "DownstreamPathTemplate": "/api/Resource/{id}"
    },
    {
      "UpstreamPathTemplate": "/api/user/token",
      "UpstreamHttpMethod": [ "Post" ],
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "api.token.resource",
          "Port": 80
        }
      ],
      "DownstreamPathTemplate": "/api/user/token"
    },
    {
      "UpstreamPathTemplate": "/api/user/refresh",
      "UpstreamHttpMethod": [ "Post" ],
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "api.token.resource",
          "Port": 80
        }
      ],
      "DownstreamPathTemplate": "/api/user/refresh"
    }
  ],

  "GlobalConfiguration": {
    "RateLimitOptions": {
      "ClientWhitelist": [],
      "EnableRateLimiting": true,
      "Period": "1s",
      "PeriodTimespan": 1,
      "Limit": 1
    }
  }
}
